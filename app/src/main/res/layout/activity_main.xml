<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlScreen"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_app">


    <!-- El banner superior-->
    <LinearLayout
        android:id="@+id/llBannerSuperior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvBannerSuperior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/constrast_data"
            android:fontFamily="@font/ubuntu_bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            tools:text="@string/banner_superior">

        </TextView>
    </LinearLayout>


    <!-- El cuerpo del juegor-->
    <!-- que vaya justo debajo del banner superior -->
    <!-- que deje un hueco abajo para el banner inferior -->
    <ScrollView
        android:id="@+id/svJuego"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llBannerSuperior"
        android:paddingBottom="70dp">

        <!--los elementos del juego -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:orientation="vertical">

            <!--El título del juego-->
            <!-- para el tamaño de fuente usamos sp-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/texto_blanco"
                android:fontFamily="@font/ubuntu_bold"
                android:textAlignment="center"
                android:textColor="@color/constrast_data"
                android:textSize="40sp"
                tools:text="@string/titulo_aplicacion">

            </TextView>


            <!--El nivel del jugador del juego-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_title_top"
                android:fontFamily="@font/ubuntu_bold"
                android:textAlignment="center"
                android:textColor="@color/texto_blanco"
                android:textSize="20sp"
                tools:text="@string/nivel"></TextView>
            <!--El borde inferior del nivel del jugador del juego-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_title_bottom"
                android:fontFamily="@font/ubuntu_bold"
                android:textAlignment="center"
                android:textColor="@color/texto_blanco"
                android:textSize="20sp"
                tools:text="0"></TextView>

            <!--Paleta de información-->
            <!--Contendrá cuatro botones asi que para que sea resposivo weight4-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <!--Paleta de información campo movimientos-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!-- texto de movimientos-->
                    <TextView
                        android:id="@+id/movimientosTitulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_item_top"
                        android:fontFamily="@font/ubuntu_bold"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/movimientosTitulo"
                        android:textAlignment="center"
                        android:textColor="@color/texto_blanco"
                        android:textSize="18sp"></TextView>
                    <!-- numero de movimientos restantes de movimientos-->
                    <TextView
                        android:id="@+id/movimientosDatos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_item_bottom"
                        android:fontFamily="@font/ubuntu_bold"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/texto_blanco"
                        android:textSize="18sp"></TextView>
                </LinearLayout>

                <!--Paleta de información campo Tiempo-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!-- texto de movimientos-->
                    <TextView
                        android:id="@+id/tiempoTitulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_item_top"
                        android:fontFamily="@font/ubuntu_bold"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/tiempoTitulo"
                        android:textAlignment="center"
                        android:textColor="@color/texto_blanco"
                        android:textSize="18sp"></TextView>
                    <!-- numero de movimientos restantes de movimientos-->
                    <TextView
                        android:id="@+id/tiempoDatos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_item_bottom"
                        android:fontFamily="@font/ubuntu_bold"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/texto_blanco"
                        android:textSize="18sp"></TextView>
                </LinearLayout>

                <!--Paleta de información campo Vidas-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!-- texto de movimientos-->
                    <TextView
                        android:id="@+id/vidasTitulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_item_top"
                        android:fontFamily="@font/ubuntu_bold"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/vidasTitulo"
                        android:textAlignment="center"
                        android:textColor="@color/texto_blanco"
                        android:textSize="18sp"></TextView>
                    <!-- numero de movimientos restantes de movimientos-->
                    <TextView
                        android:id="@+id/vidasDato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_item_bottom"
                        android:fontFamily="@font/ubuntu_bold"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/texto_blanco"
                        android:textSize="18sp"></TextView>
                </LinearLayout>


                <!--Paleta de información campo opciones-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!-- texto de movimientos-->
                    <TextView
                        android:id="@+id/opcionesTitulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_item_top"
                        android:fontFamily="@font/ubuntu_bold"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/opcionesTitulo"
                        android:textAlignment="center"
                        android:textColor="@color/texto_blanco"
                        android:textSize="18sp"></TextView>
                    <!-- numero de movimientos restantes de movimientos-->
                    <TextView
                        android:id="@+id/opcionesDato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_item_bottom"
                        android:fontFamily="@font/ubuntu_bold"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/texto_blanco"
                        android:textSize="18sp"></TextView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <!-- El banner inferior-->
    <LinearLayout
        android:id="@+id/llBannerInferior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvBannerInferior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/constrast_data"
            android:fontFamily="@font/ubuntu_bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textAlignment="center"
            android:textColor="@color/white"

            tools:text="@string/banner_inferior">

        </TextView>
    </LinearLayout>


</RelativeLayout>