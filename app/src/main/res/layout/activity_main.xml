                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/texto_blanco"
                android:fontFamily="@font/ubunt_light"
                android:textAlignment="center"
                android:textColor="@color/fondo_tile"
                android:textSize="34sp"
                android:textStyle="bold"
                android:text="@string/titulo_aplicacion"/>




            <!--El nivel del jugador del juego-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_title_top"
                android:fontFamily="@font/ubuntu_bold"
                android:textAlignment="center"
                android:textColor="@color/texto_blanco"
                android:textSize="20sp"
                android:text="@string/nivel">

