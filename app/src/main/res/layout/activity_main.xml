    <!-- El banner superior-->
    <LinearLayout
        android:id="@+id/llBannerSuperior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvBannerSuperior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/constrast_data"
            android:text="@string/banner_superior"
            android:textAlignment="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/white" />

    </LinearLayout>


    <!-- El cuerpo del juegor-->
    <!-- que vaya justo debajo del banner superior -->
    <!-- que deje un hueco abajo para el banner inferior -->
    <ScrollView
        android:id="@+id/svJuego"
